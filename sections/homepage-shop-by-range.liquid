{{ 'homepage-shop-the-range.css' | asset_url | stylesheet_tag }}


<section class="splide" aria-label="Splide Basic HTML Example">
  <div class="splide__track">
		<ul class="splide__list">
			<li class="splide__slide">Slide 01</li>
			<li class="splide__slide">Slide 02</li>
			<li class="splide__slide">Slide 03</li>
		</ul>
  </div>
</section>

{% comment %} 
<section class="shop-by-collection">
  <div class="shop-by-collection__container">
    {% if section.settings.shop_by_collection_heading %}
      <{{ section.settings.heading_size }} class="shop-by-collection__heading">
        {{ section.settings.shop_by_collection_heading }}
      </{{ section.settings.heading_size }}>
    {% endif %}

    <div class="shop-by-collection__grid">
      {% for block in section.blocks %}
        <div class="shop-by-collection__card">
          <a href="{{ block.settings.collection_url }}" class="shop-by-collection__link">
            <div class="shop-by-collection__content">
              <div class="shop-by-collection__image">
              {% if block.settings.collection.image != blank %}
                  {% render 'responsive-picture', 
                    desktopImage: block.settings.collection.image, 
                    img-class: 'shop-by-collection__image--img w-full h-auto' 
                  %}
                  {%- else -%}
                  {{ "collection-1" | placeholder_svg_tag }}
                {%- endif %}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section> {% endcomment %}


{% comment %} 
<script>
  var splide = new Splide( '.splide', {
  type   : 'loop',
  perPage: 3,
  perMove: 1,
} );

 splide.mount();
</script> {% endcomment %}

{% schema %}
{
  "name": "Shop By Collection",
  "class": "shop-by-collection",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "shop_by_collection_heading",
      "label": "Section Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ],
      "default": "h1"
    }
  ],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "URL to Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Shop By Range"
    }
  ]
}
{% endschema %}

